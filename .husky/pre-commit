# Workaround that command "nvm" is always available
# https://github.com/typicode/husky/issues/912#issuecomment-1453139409
# This loads nvm.sh and sets the correct PATH before running hook
export NVM_DIR="$HOME/.nvm"
if [ -s "$NVM_DIR/nvm.sh" ]; then
    # Load nvm
    . "$NVM_DIR/nvm.sh"
fi

# --allow-empty | Allow commiting without message to use default GIT editor (with `git commit`)
nvm install && npx lint-staged --allow-empty